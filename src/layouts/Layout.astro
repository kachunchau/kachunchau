---
import { ClientRouter } from "astro:transitions";
import "@fontsource-variable/figtree";
import "@fontsource-variable/figtree/wght-italic.css";
import "@fontsource-variable/bricolage-grotesque";
import "../styles/global.css";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta
      name="description"
      content={description
        ? description
        : "I'm Ka-Chun Chau, a UI designer from Northern Ireland that codes"}
    />
    <meta name="generator" content={Astro.generator} />
    <ClientRouter />
  </head>
  <body
    class="min-h-screen bg-slate-50/75 text-cyan-950 antialiased transition-colors duration-300 [text-rendering:optimizeLegibility] dark:bg-slate-800 dark:text-cyan-50"
  >
    <div
      class="relative z-10 mb-100 bg-linear-125 from-teal-900 via-cyan-950 via-[700px] to-slate-900 to-[3000px]"
    >
      <slot />
    </div>

    <div
      class="fixed bottom-0 left-1/2 z-50 -translate-y-1/2 rounded-md bg-amber-300 px-1.5 py-0.5 text-xs dark:text-cyan-950"
    >
      ðŸš§ Live redesign
    </div>

    <Footer />

    {
      import.meta.env.DEV && (
        <div class="fixed right-2 bottom-2 z-50 flex items-center justify-center rounded-md bg-white px-2 py-1 text-sm text-blue-950 outline outline-black">
          <span class="sm:hidden">mobile</span>
          <span class="hidden sm:block md:hidden">sm</span>
          <span class="hidden md:block lg:hidden">md</span>
          <span class="hidden lg:block xl:hidden">lg</span>
          <span class="hidden xl:block 2xl:hidden">xl</span>
          <span class="hidden 2xl:block">2xl</span>
        </div>
      )
    }
  </body>
</html>
