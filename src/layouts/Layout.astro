---
import { Font } from "astro:assets";
import { ClientRouter } from "astro:transitions";
import "@fontsource-variable/figtree";
import "../styles/global.css";
import Tooltip from "../components/Tooltip.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Font cssVariable="--font-bricolage-grotesque" preload />
    <title>
      {
        title
          ? `Ka-Chun Chau | ${title}`
          : "Ka-Chun Chau | UI Designer & Developer"
      }
    </title>
    <meta
      name="description"
      content={description ? description : "I'm KC, a UI Designer & Developer."}
    />
    <meta name="generator" content={Astro.generator} />
    <meta
      property="og:title"
      content={title
        ? `Ka-Chun Chau | ${title}`
        : "Ka-Chun Chau | UI Designer & Developer"}
    />
    <meta
      property="og:description"
      content={description ? description : "I'm KC, a UI Designer & Developer."}
    />
    <meta property="og:type" content="website" />
    <ClientRouter />
    <Tooltip />
  </head>
  <body
    class="min-h-screen bg-slate-950 text-cyan-950 antialiased transition-colors duration-300 [text-rendering:optimizeLegibility] dark:text-cyan-50"
  >
    <div
      class="relative z-10 mb-150 rounded-b-4xl bg-white bg-linear-to-b from-cyan-50/90 to-white to-[1024px] transform-3d md:rounded-b-[48px] dark:bg-transparent dark:bg-linear-125 dark:from-teal-900 dark:via-cyan-950 dark:via-[700px] dark:to-slate-900 dark:to-[3000px]"
    >
      <slot />
    </div>

    <Footer />

    {
      import.meta.env.DEV && (
        <div class="fixed right-2 bottom-2 z-50 flex items-center justify-center rounded-md bg-white px-2 py-1 text-sm text-blue-950 outline outline-black">
          <span class="sm:hidden">mobile</span>
          <span class="hidden sm:block md:hidden">sm</span>
          <span class="hidden md:block lg:hidden">md</span>
          <span class="hidden lg:block xl:hidden">lg</span>
          <span class="hidden xl:block 2xl:hidden">xl</span>
          <span class="hidden 2xl:block">2xl</span>
        </div>
      )
    }
  </body>
</html>
