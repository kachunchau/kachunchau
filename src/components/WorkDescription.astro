---
interface Props {
  href?: string;
}

const { href } = Astro.props;
const displayText = href?.includes("https://") ? href : "View Project";
---

<div class="col-span-1 md:col-span-full">
  <div class="mx-auto max-w-2xl space-y-7">
    <slot />

    {
      href && (
        <a
          class="mt-10 flex items-center justify-between gap-4 rounded-2xl bg-white/5 px-8 py-7 text-2xl text-white transition duration-300 ease-in-out hover:bg-white/10"
          href={href}
        >
          <span class="font-medium">{displayText}</span>{" "}
          <span class="text-slate-400">â†—</span>
        </a>
      )
    }
  </div>
</div>
