---
interface Props {
  type?: "button";
  href?: string;
  class?: string;
  variant?: "gradient" | "cyan";
}

const { type, href, class: className, variant = "cyan" } = Astro.props;

const Tag = type === "button" ? "button" : "a";

const variantStyles = {
  gradient:
    "bg-gradient-to-b from-blue-950 to-slate-950 border border-white/20 shadow-[inset_0_2px_0_rgba(255,255,255,0.2)] text-white",
  cyan: "bg-cyan-950 text-white hover:bg-teal-600 dark:text-cyan-950 dark:bg-white hover:dark:bg-cyan-50 active:bg-cyan-900",
};
---

<Tag
  {...type === "button" ? { type } : { href: href || "#" }}
  class={`inline-block transition-all duration-300 ease-in-out rounded-full whitespace-nowrap px-5 md:px-8 py-2.5 md:py-3.5 text-xl md:text-2xl font-semibold ${variantStyles[variant]} ${className || ""}`}
>
  <slot />
</Tag>
