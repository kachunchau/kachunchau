---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  className?: string;
  company?: string;
  title?: string;
  description?: string;
  alt?: string;
  src: ImageMetadata;
  imgColor?: string;
  variant?: "gradient" | "simple";
}

const {
  className,
  company = "Vero",
  title,
  description,
  alt,
  src,
  imgColor = "bg-teal-50",
  variant = "gradient",
} = Astro.props;

const variantStyles = {
  gradient:
    "bg-radial-[170%_115%_at_50%_49%] backdrop-blur-lg from-white/5 from-40% to-teal-400/30",
  simple: "bg-white/5",
};
---

<div
  class={`rounded-4xl block group overflow-clip relative shadow-2xl p-2 inset-ring inset-ring-white/5 ${variantStyles[variant]} ${className || ""}`}
>
  <div class:list={["relative overflow-clip rounded-3xl", imgColor]}>
    <Image
      class="rounded-[inherit] drop-shadow-xl"
      src={src}
      alt={alt || "Work card image"}
    />
  </div>

  <div class="px-4 pt-4 pb-3">
    <span class="inline-block text-sm tracking-widest text-slate-400 uppercase"
      >{company}</span
    >
    {
      title && (
        <h3 class="font-bricolage text-xl font-semibold -tracking-[0.025em] text-cyan-50 md:mt-0.5 md:text-2xl">
          {title}
        </h3>
      )
    }
    {
      description && (
        <p class="mt-1 text-base text-slate-400 md:mt-2 md:text-xl">
          {description}
        </p>
      )
    }
  </div>
</div>
