---
import Header from "./Header.astro";

interface Props {
  variant?: "gradient" | "white";
  size?: "default" | "compact";
}

const { variant = "gradient", size = "default" } = Astro.props;

const variantStyles = {
  gradient: "bg-linear-to-b to-cyan-50 from-white dark:bg-none",
  white: "bg-white dark:bg-transparent",
};

const sizeStyles = {
  default: "max-w-6xl md:px-20 xl:px-0",
  compact: " max-w-2xl md:px-0 ",
};
---

<div class={`${variantStyles[variant]}`}>
  <Header />

  <div
    class={`mx-auto px-10 pt-30 pb-20 md:pt-40 md:pb-32 ${sizeStyles[size]}`}
  >
    <slot />
  </div>
</div>
