---
import Layout from "../layouts/Layout.astro";
import Masthead from "../components/Masthead.astro";
import WorkGrid from "../components/WorkGrid.astro";
import WorkCard from "../components/WorkCard.astro";
import WorkDescription from "../components/WorkDescription.astro";
import Button from "../components/Button.astro";
import VeroLogo from "../images/vero.svg";
import settingsImage from "../images/settings@2x.png";
import customHtmlBlocksImage from "../images/custom-html-blocks@2x.png";
import customHtmlEditorImage from "../images/custom-html-editor@2x.png";
import abTestingImage from "../images/ab-testing@2x.png";
import smsImage from "../images/sms@2x.png";
import veroMarketingHomeImage from "../images/vero-marketing-home@2x.png";
import helpCenterImage from "../images/help-center@2x.png";
import helpCenterSearchImage from "../images/help-center-search@2x.png";

import vero2SidebarImage from "../images/vero-2-sidebar@2x.png";
import vero1SidebarImage from "../images/vero-1-sidebar@2x.png";
import vero2ProfileImage from "../images/vero-2-profile@2x.png";
import templateIconsImage from "../images/template-icons@2x.png";
import vero2CalloutsImage from "../images/vero-2-callouts@2x.png";
import contentBreakdownImage from "../images/content-breakdown@2x.png";

import bluboltStoresImage from "../images/blubolt-stores@2x.png";
---

<Layout title="Ka-Chun Chau â€” UI Designer">
  <Masthead>
    <h1
      class="font-bricolage text-4xl font-light -tracking-[0.025em] text-balance md:text-6xl md:tracking-[-0.04em] dark:text-white"
    >
      <span class="font-medium">Hey there</span> &mdash; I'm KC, a UI Designer and
      developer from Armagh, Northern Ireland, now based in Melbourne, Australia.
    </h1>

    <p
      class="mt-8 text-2xl tracking-[-0.01em] text-slate-400 dark:text-cyan-50"
    >
      I've spent the past 7 years at
      <a
        class="group relative inline-block pl-12"
        href="https://www.getvero.com/"
      >
        <VeroLogo
          class="absolute -top-0.5 left-1.5 -rotate-4 rounded-lg bg-slate-100 p-1 transition-transform duration-300 ease-in-out group-hover:rotate-3 dark:bg-white"
          width={36}
          height={36}
        /> Vero <span
          class="font-normal text-slate-300 transition-transform duration-300 ease-in-out group-hover:translate-x-1"
          >â†—</span
        >
      </a> as a Designer.
    </p>

    <Button class="mt-11" href="mailto:kachun@kachunchau.com" variant="solid">
      ðŸ‘‹ Get in touch
    </Button>
  </Masthead>

  <div
    class:list={[
      "relative z-10 mb-100 border-t border-transparent text-cyan-50 dark:border-white/10",
    ]}
  >
    <main class="mx-auto max-w-[1200px] px-10 py-20 md:px-20 md:py-32 xl:px-0">
      <div class="mb-5 flex items-center justify-between gap-3 md:mb-10">
        <div class="text-xl font-medium md:text-3xl">Vero</div>

        <div class="rounded-full px-4 py-2 inset-ring-2 inset-ring-white/10">
          2018 - Present
        </div>
      </div>

      <div class="space-y-20 md:space-y-32">
        <WorkCard
          title="Settings"
          description="Full redesign of the settings section for Vero 2.0"
          src={settingsImage}
          alt="Full redesign of the settings section for Vero 2.0"
          caseStudy={true}
          href="/work/settings"
        />

        <WorkCard
          className="col-span-1 md:col-span-2"
          title="AB Testing"
          description="Redesigning A/B Testing for newsletter-style campaigns"
          src={abTestingImage}
          alt="Redesigning A/B Testing for newsletter-style campaigns"
          caseStudy={true}
          href="/work/ab-testing"
        />

        <WorkGrid>
          <WorkCard
            className="col-span-1"
            title="HTML block"
            description="Add a custom HTML block"
            src={customHtmlBlocksImage}
            alt="Mastodon logo"
          />

          <WorkCard
            className="col-span-1 md:col-span-2"
            title="HTML block"
            description="Design for a custom HTML editor in Vero's drag and drop editor"
            src={customHtmlEditorImage}
            alt="Mastodon logo"
          />
        </WorkGrid>

        <WorkGrid>
          <WorkCard
            className="col-span-full"
            title="SMS Channel"
            description="UI to allow sending of SMS message campaigns"
            src={smsImage}
            alt="SMS Channel"
          />
        </WorkGrid>

        <h2 class="mt-32 mb-4 font-medium text-slate-400 md:mb-6 md:text-xl">
          Small things
        </h2>

        <div
          class="columns-2 gap-7 space-y-7 md:columns-3 md:gap-10 md:space-y-10"
        >
          <WorkCard
            className="inline-block"
            description="Vero 2.0 profile dropdown"
            src={vero2ProfileImage}
            alt="Account & profile dropdown"
            variant="simple"
          />
          <WorkCard
            className="inline-block"
            description="Vero 2.0 upgrade callouts"
            src={vero2CalloutsImage}
            alt="Vero 2.0 upgrade callouts"
            variant="simple"
          />
          <WorkCard
            className="inline-block"
            description="Vero 2.0 sidebar"
            src={vero2SidebarImage}
            alt="Vero 2.0 sidebar redesign"
            variant="simple"
          />
          <WorkCard
            className="inline-block"
            description="Email type icons"
            src={templateIconsImage}
            alt="Mastodon logo"
            imgColor="bg-sky-50"
            variant="simple"
          />
          <WorkCard
            className="inline-block"
            description="Vero 1.0 sidebar redesign"
            src={vero1SidebarImage}
            alt="Vero 1.0 sidebar redesign"
            variant="simple"
          />
          <WorkCard
            className="inline-block"
            description="Content breakdown"
            src={contentBreakdownImage}
            alt="Content breakdown table"
            variant="simple"
          />
        </div>

        <WorkCard
          title="Vero marketing site"
          description="Continuous evolution of the Vero marketing site"
          src={veroMarketingHomeImage}
          alt="Vero marketing home redesign"
        />

        <WorkGrid>
          <WorkCard
            className="col-span-1 md:col-span-2"
            title="Help Center"
            description="Redesigned and implementation of the Help Center"
            src={helpCenterImage}
            alt="Help Center redesign"
          />
          <WorkCard
            className="col-span-1"
            title="Help Center"
            description="Redesigned the search experience"
            src={helpCenterSearchImage}
            alt="Help Center search"
          />
        </WorkGrid>
      </div>

      <div class="mt-32 mb-5 flex items-center justify-between gap-3 md:mb-10">
        <div class="text-xl font-medium md:text-3xl">blubolt</div>

        <div class="rounded-full px-4 py-2 inset-ring-2 inset-ring-white/10">
          2014 - 2017
        </div>
      </div>

      <WorkCard
        title="eCommerce stores"
        description="Redesigns of various eCommerce stores"
        src={bluboltStoresImage}
        alt="Mastodon logo"
        variant="simple"
        imgColor="bg-purple-50"
      />
    </main>
  </div>
</Layout>
