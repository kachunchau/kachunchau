---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Masthead from "../components/Masthead.astro";
import VeroLogo from "../images/vero.svg";
import BluboltLogo from "../images/blubolt.svg";
import SkySportsLogo from "../images/sky-sports.svg";
import FrankLogo from "../images/frank.svg";
import riotLogo from "../images/riot@2x.png";

const experiences = [
  {
    title: "Product & Digital Designer",
    company: "Vero",
    href: "https://getvero.com",
    date: "Sep 2018 - May 2025",
    logo: VeroLogo,
  },
  {
    title: "UX/UI Designer",
    company: "blubolt",
    href: "https://blubolt.com",
    date: "Jul 2014 - Oct 2017",
    logo: BluboltLogo,
  },
  {
    title: "Digital Designer",
    company: "Sky Sports",
    href: "https://www.skysports.com",
    date: "2014",
    logo: SkySportsLogo,
  },
  {
    title: "Designer & Front-end Developer",
    company: "Riot HQ",
    href: "https://riothq.com",
    date: "Mar 2012 - Feb 2014",
  },
  {
    title: "Front-end Developer",
    company: "Frank",
    href: "https://bigmotive.com",
    date: "Jul 2011 - Feb 2012",
    logo: FrankLogo,
  },
];
---

<Layout title="Ka-Chun Chau — UI Designer">
  <Masthead>
    <h1
      class="font-bricolage text-5xl font-light -tracking-[0.025em] text-balance md:text-6xl md:tracking-[-0.03em]"
    >
      Resume
    </h1>
    <a
      class="mt-2 inline-block text-xl text-slate-400 md:mt-4"
      href="/KC-Resume.pdf"
      >Download full resume <span class="font-light text-slate-300">↓</span></a
    >
  </Masthead>

  <main
    class="mx-auto grid max-w-6xl gap-8 border-t border-slate-200/70 px-8 py-20 md:gap-10 md:px-20 md:py-32 lg:grid-cols-3 xl:px-0 xl:pb-48 dark:border-white/10"
  >
    <div class="col-span-1 space-y-20 md:space-y-32 lg:col-span-2">
      <section>
        <h2
          class="mb-1 text-sm font-semibold tracking-wider text-slate-400 uppercase md:text-base"
        >
          Experience
        </h2>

        <ul class="divide-y divide-slate-100 dark:divide-white/10">
          {
            experiences.map((experience) => (
              <li class="flex flex-col items-start gap-2 py-8 md:flex-row md:items-center md:justify-between md:gap-5">
                {experience.company === "Riot HQ" ? (
                  <Image
                    class="flex-none"
                    src={riotLogo}
                    alt={experience.company}
                    densities={[1, 2]}
                    width={48}
                    height={48}
                  />
                ) : experience.logo ? (
                  <experience.logo
                    class:list={[
                      "flex-none",
                      experience.company === "Frank" ? "dark:fill-white" : "",
                    ]}
                    width={48}
                    height={48}
                  />
                ) : null}
                <div class="flex flex-1 flex-col items-stretch">
                  <div class="flex items-center gap-2 overflow-hidden md:gap-3">
                    <a
                      class="flex basis-2/5 items-center gap-2"
                      href={experience.href}
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <span class="text-xl font-medium -tracking-[0.025em] md:text-2xl">
                        {experience.company}
                      </span>
                      <span class="text-lg font-medium text-slate-300 md:text-xl">
                        ↗
                      </span>
                    </a>
                    <span class="truncate text-xl text-slate-400 md:text-2xl">
                      {experience.title}
                    </span>
                  </div>

                  <div class="text-base whitespace-nowrap text-slate-400 md:text-xl">
                    {experience.date}
                  </div>
                </div>
              </li>
            ))
          }
        </ul>
      </section>

      <section>
        <h2
          class="mb-1 text-sm font-semibold tracking-wider text-slate-400 uppercase md:text-base"
        >
          Education
        </h2>

        <ul class="divide-y divide-white/10">
          <li class="flex items-start gap-6 py-8">
            <div class="flex flex-1 flex-col items-start">
              <h2 class="text-xl md:text-2xl">
                <span class="font-medium">University of Ulster </span>
                <span class="font-light text-slate-200">/</span>
                <span class="font-medium text-slate-400"
                  >BSc (Hons) Interactive Multimedia Design</span
                >
              </h2>

              <div class="text-lg whitespace-nowrap text-slate-400">
                2007 - 2011
              </div>
            </div>
          </li>
        </ul>
      </section>
    </div>
  </main>
</Layout>
